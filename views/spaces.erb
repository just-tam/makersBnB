<!DOCTYPE html>

<html>

<head>
    <title>Spaces</title>
</head>

<body>
  <h1>Nomads</h1>
      <% if @user %>
      <h1>Welcome, <%= @user.username %></h1>
      <% else %>
      <h1> Welcome! </h1>
      <% end %>
    <ul>
    <% @space.each do |space| %>
      <li> Name : <%= space.name %> </li>
      <li> Description: <%= space.description %> </li>
      <li>Price: <%= space.price %> </li>
      <li>Available from: <%= space.start_date %> </li>
      <li>Available to: <%= space.end_date %> </li>
      <% end %>
    </ul>

     <h2><% @viewuser %></h2>

    <ul>
    <% @viewusers.each do |user| %>
     <li> id : <%= user.id %> </li>
      <li> Username : <%= user.username %> </li>
    <% end %>
    </ul>

